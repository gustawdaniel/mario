{% extends 'base.html.twig' %}

{% block body %}
    <h1>Others</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ other.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ other.name }}</td>
            </tr>
            <tr>
