{% extends "AppBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}



    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <br>
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <br>
                    {#<label for="username">{{ 'security.login.username'|trans }}</label>#}
                    <input placeholder="Login" class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    <br>
                    {#<label for="password">{{ 'security.login.password'|trans }}</label>#}
                    <input placeholder="HasÅ‚o" class="form-control" type="password" id="password" name="_password" required="required" />
                    <br>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    <br>
                    {% if error %}
                        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <input class="btn btn-block btn-info" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </form>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}
